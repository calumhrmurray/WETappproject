<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Water Energy Trial website</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
   <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" Water Efficiency Trial", "Index", "Navigation", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Navigation")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <ul class="nav nav-tabs">
            <li>
                @Html.ActionLink("Home", "Index", "Navigation", null, new { @class = "ct" })
            </li>
            <li>
                @Html.ActionLink("Management form", "Management", "Navigation", null, new { @class = "ct" })
            </li>
            <li>
                @Html.ActionLink("Visit admin", "Visits", "Navigation", null, new { @class = "ct" })
            </li>
            <li>
                @Html.ActionLink("Stats", "Stats", "Navigation", null, new { @class = "ct" })
            </li>
        </ul>
        <footer>
            <p>&copy; @DateTime.Now.Year -  Water Energy Trial website</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
